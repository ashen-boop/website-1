    }, 1000);
}

// ===== COMPOUND FRAME GALLERY FUNCTIONALITY =====

// Initialize compound frame gallery
function initCompoundFrameGallery() {
    const gallerySection = document.getElementById('compoundFrameGallery');
    const mainImage = gallerySection.querySelector('#compound-main-image');
    const placeholder = gallerySection.querySelector('.placeholder');
    const loadingIndicator = gallerySection.querySelector('.loading');
    const selectFrameBtn = gallerySection.querySelector('.select-frame-btn');
    const filterButtons = gallerySection.querySelectorAll('.filter-btn');
    const thumbnailSets = gallerySection.querySelectorAll('.thumbnail-set');
    const confirmationMessage = document.getElementById('confirmation-message-compound');
    const confirmYesBtn = confirmationMessage.querySelector('.confirm-yes');
    const confirmNoBtn = confirmationMessage.querySelector('.confirm-no');
    const filterButtonsContainer = gallerySection.querySelector('.filter-buttons');
    const scrollLeftBtn = gallerySection.querySelector('.scroll-btn.left');
    const scrollRightBtn = gallerySection.querySelector('.scroll-btn.right');
    const priceDisplay = document.getElementById('compound-price-display');
    
    let selectedImageUrl = '';
    let currentSelectedSize = 'small'; // Default size
    
    // Price mapping for each frame size
    const prices = {
        'small': '$8000',
        'medium': '$7000', 
        'large': '$5800',
        'extra-large': '$5500'
    };
    
    // Size to collage group mapping
    const sizeToCollageMap = {
        'small': 'groupB',
        'medium': 'groupA',
        'large': 'groupB', 
        'extra-large': 'groupA'
    };

    // Preload all images for instant display
    function preloadImages() {
        const imageUrls = [];
        
        // Collect all image URLs
        gallerySection.querySelectorAll('.thumbnail').forEach(thumbnail => {
            imageUrls.push(thumbnail.getAttribute('data-image'));
        });
        
        // Preload each image
        imageUrls.forEach(url => {
            const img = new Image();
            img.src = url;
        });
    }
    
    // Preload images when page loads
    preloadImages();
    
    // Thumbnail click functionality
    function setupThumbnailListeners() {
        const thumbnails = gallerySection.querySelectorAll('.thumbnail');
        const indicators = gallerySection.querySelectorAll('.selection-indicator');
        
        thumbnails.forEach((thumbnail, index) => {
            // Click on thumbnail
            thumbnail.addEventListener('click', function() {
                selectThumbnail(this, index);
            });
            
            // Click on indicator
            indicators[index].addEventListener('click', function(e) {
                e.stopPropagation(); // Prevent triggering the thumbnail click event
                selectThumbnail(thumbnail, index);
            });
        });
    }
    
    function selectThumbnail(thumbnail, index) {
        const imageUrl = thumbnail.getAttribute('data-image');
        selectedImageUrl = imageUrl;
        
        // Show loading indicator
        loadingIndicator.style.display = 'block';
        mainImage.classList.remove('loaded');
        placeholder.style.display = 'none';
        
        // Show the Select Frame button
        selectFrameBtn.classList.add('visible');
        
        // Check if image is already loaded in cache
        const testImage = new Image();
        testImage.src = imageUrl;
        
        if (testImage.complete) {
            displayImage(imageUrl);
        } else {
            testImage.onload = function() {
                displayImage(imageUrl);
            };
        }
        
        // Highlight selected thumbnail
        gallerySection.querySelectorAll('.thumbnail').forEach(t => {
            t.style.boxShadow = 'none';
        });
        thumbnail.style.boxShadow = '0 0 12px rgba(52, 152, 219, 0.6)';
        
        // Highlight selected indicator
        gallerySection.querySelectorAll('.selection-indicator').forEach(indicator => {
            indicator.classList.remove('active');
        });
        gallerySection.querySelectorAll('.selection-indicator')[index].classList.add('active');
    }
    
    function displayImage(url) {
        mainImage.src = url;
        mainImage.onload = function() {
            loadingIndicator.style.display = 'none';
            mainImage.classList.add('loaded');
        };
    }
    
    // Update price display
    function updatePrice(filter) {
        priceDisplay.textContent = prices[filter];
        currentSelectedSize = filter;
        
        // Show appropriate collages based on size
        showCollagesForSize(filter);
    }
    // Show collages based on selected size



function showCollagesForSize(size) {
    const collageGroup = sizeToCollageMap[size];
    
    // Hide all collage containers first
    document.getElementById('portraitCollageContainer').style.display = 'none';
    document.getElementById('landscapeCollageContainer').style.display = 'none';
    document.getElementById('groupBLandscapeCollageContainer').style.display = 'none';
    document.getElementById('collage10x12Container').style.display = 'none';
    document.getElementById('longFrameContainer').style.display = 'none';
    document.getElementById('shortFrameContainer').style.display = 'none';
    
    // Clear previous collage selections
    document.querySelectorAll('.select-circle').forEach(circle => {
        circle.classList.remove('selected');
    });
    customerSelections.collages = [];
    updateSummaryDisplay();
    
    // DON'T show collage containers here - they will be shown only after frame selection
    // Just store which collage container should be shown later
    // The actual display will happen in the "Yes, Select It" click handler
    
    // Update orientation selection
    updateOrientationSelection('landscape');
}


    
    // Select Frame button functionality
    selectFrameBtn.addEventListener('click', function() {
        if (selectedImageUrl && currentFrameType) {
            const frameData = {
                name: currentFrameType.title,
                size: currentSelectedSize.toUpperCase(),
                price: parseInt(prices[currentSelectedSize].replace('$', '')),
                imageUrl: selectedImageUrl,
                galleryImage: selectedImageUrl,
                type: 'compound',
                color: ''
            };
            
            confirmationMessage.classList.add('visible');
            
            // Update confirmation buttons
            confirmYesBtn.replaceWith(confirmYesBtn.cloneNode(true));
            confirmNoBtn.replaceWith(confirmNoBtn.cloneNode(true));
            
            const newYesBtn = confirmationMessage.querySelector('.confirm-yes');
            const newNoBtn = confirmationMessage.querySelector('.confirm-no');
            
            newYesBtn.addEventListener('click', function() {
    updateFrameSelection(frameData);
    confirmationMessage.classList.remove('visible');
    
    // Show the collages only after selecting "Yes, Select It"
    const collageGroup = sizeToCollageMap[currentSelectedSize];
    let collageContainer;
    
    if (collageGroup === 'groupA') {
        collageContainer = document.getElementById('landscapeCollageContainer');
    } else if (collageGroup === 'groupB') {
        collageContainer = document.getElementById('groupBLandscapeCollageContainer');
    }
    
    // Show the collage container
    if (collageContainer) {
        collageContainer.style.display = 'block';
        
        // Scroll to the collage section after a short delay
        setTimeout(() => {
            collageContainer.scrollIntoView({ 
                behavior: 'smooth',
                block: 'start'
            });
        }, 300);
    }
});
            
            newNoBtn.addEventListener('click', function() {
                confirmationMessage.classList.remove('visible');
             });
        }
    });
    
    // Filter button functionality
    filterButtons.forEach(button => {
        button.addEventListener('click', function() {
            const filter = this.getAttribute('data-filter');
            
            // Remove active class from all buttons
            filterButtons.forEach(btn => {
                btn.classList.remove('active');
            });
            
            // Add active class to clicked button
            this.classList.add('active');
            
            // Update price display
            updatePrice(filter);
            
            // Hide all thumbnail sets
            thumbnailSets.forEach(set => set.classList.remove('active'));
            
            // Show the selected thumbnail set
            const selectedSet = document.getElementById(`${filter}-frames`);
            selectedSet.classList.add('active');
            
            // Reset selection indicators
            gallerySection.querySelectorAll('.selection-indicator').forEach(indicator => {
                indicator.classList.remove('active');
            });
            
            // Hide Select Frame button when changing filters
            selectFrameBtn.classList.remove('visible');
            
            // Reset main image display
            mainImage.classList.remove('loaded');
            mainImage.src = '';
            placeholder.style.display = 'block';
            selectedImageUrl = '';
            
            // Automatically select the first thumbnail in the set
            const firstThumbnail = selectedSet.querySelector('.thumbnail');
            if (firstThumbnail) {
                const index = Array.from(selectedSet.querySelectorAll('.thumbnail')).indexOf(firstThumbnail);
                selectThumbnail(firstThumbnail, index);
            }
            
            // Set up listeners for the new thumbnails
            setupThumbnailListeners();
        });
    });
    
    // Scroll buttons functionality
    scrollLeftBtn.addEventListener('click', function() {
        filterButtonsContainer.scrollBy({
            left: -150,
            behavior: 'smooth'
        });
    });
    
    scrollRightBtn.addEventListener('click', function() {
        filterButtonsContainer.scrollBy({
            left: 150,
            behavior: 'smooth'
        });
    });
    
    // Initial setup - automatically select the first thumbnail
    const firstThumbnail = gallerySection.querySelector('.thumbnail');
    if (firstThumbnail) {
        const index = Array.from(gallerySection.querySelectorAll('.thumbnail')).indexOf(firstThumbnail);
        selectThumbnail(firstThumbnail, index);
    }
    
    // Set up initial listeners
    setupThumbnailListeners();

// Auto-select small frames by default when gallery loads
setTimeout(() => {
    const smallFilterBtn = gallerySection.querySelector('.filter-btn[data-filter="small"]');
    if (smallFilterBtn) {
        smallFilterBtn.click(); // This will trigger the small frames selection
    }
}, 200);


}

// ===== MODIFY EXISTING FUNCTIONS TO SUPPORT COMPOUND FRAME =====

// Store the original openFrameSelection function
const originalOpenFrameSelection = openFrameSelection;

// Override the openFrameSelection function
openFrameSelection = function(frameType) {
    // Call original function first
    originalOpenFrameSelection.call(this, frameType);
    
    // Store current frame type
    currentFrameType = frameType;
    
    // Hide/show appropriate sections based on frame type
    if (frameType.title === "Compound Frame") {
        // Hide old frame selection
        document.querySelector('.frame-selection').style.display = 'none';
        document.getElementById('longFrameContainer').style.display = 'none';
        document.getElementById('shortFrameContainer').style.display = 'none';
        
        // Show compound gallery
        document.getElementById('compoundFrameGallery').style.display = 'block';
        
        // Initialize compound gallery
        setTimeout(() => initCompoundFrameGallery(), 100);
    } else {
        // Hide compound gallery
        document.getElementById('compoundFrameGallery').style.display = 'none';
        
        // Show old frame selection
        document.querySelector('.frame-selection').style.display = 'block';
    }
};

// Modify closeFrameSelection to reset compound gallery
const originalCloseFrameSelection = closeFrameSelection;
closeFrameSelection = function() {
    // Call original function
    originalCloseFrameSelection.call(this);
    
    // Hide compound gallery
    document.getElementById('compoundFrameGallery').style.display = 'none';
    
    // Show old frame selection (for next time)
    document.querySelector('.frame-selection').style.display = 'block';
};



document.addEventListener('DOMContentLoaded', function() {
    // Prevent elastic scroll on Android
    document.body.style.overflow = 'hidden';
    document.documentElement.style.overflow = 'hidden';
    
    setTimeout(function() {
        document.body.style.overflow = 'auto';
        document.documentElement.style.overflow = 'auto';
    }, 100);
});


</script>
</body>
</html>
