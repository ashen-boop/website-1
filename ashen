Size: ${customerSelections.frameSize || 'Not selected'}
Price: $${customerSelections.framePrice || '0'}
Orientation: ${customerSelections.orientation || 'Not selected'}
Frame Type: ${customerSelections.frameType || 'Not specified'}
Frame Color: ${customerSelections.frameColor || 'Not specified'}

CUSTOMER DETAILS:
Name: ${customerSelections.customerName || 'Not provided'}
Address: ${customerSelections.customerAddress || 'Not provided'}
Phone: ${customerSelections.customerPhone || 'Not provided'}
WhatsApp: ${customerSelections.customerWhatsApp || 'Not provided'}
Email: ${customerSelections.customerEmail || 'Not provided'}

COLLAGES SELECTED:
${customerSelections.collages && customerSelections.collages.length > 0 ? 
  customerSelections.collages.map((collage, index) => `${index + 1}. ${collage.name || 'Collage ' + (index + 1)}`).join('\n') : 
  'No collages selected'}

SPECIAL REQUESTS:
${customerSelections.specialRequests || 'None'}

PHOTOS: ${customerSelections.uploadedPhotos && customerSelections.uploadedPhotos.length > 0 ? 
  customerSelections.uploadedPhotos.length + ' photos uploaded' : 
  'No photos uploaded'}
    `.trim();
    
    // Replace with your WhatsApp business number
    const whatsappNumber = "+94712961268"; // YOUR NUMBER HERE
    
    const message = encodeURIComponent(`Hello Artistic Unity! I would like to confirm my order:\n\n${orderDetails}\n\nPlease confirm receipt. Thank you!`);
    window.open(`https://wa.me/${whatsappNumber}?text=${message}`, '_blank');
}

