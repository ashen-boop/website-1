// ===== ORDER SUMMARY INTEGRATION =====

// Global variables to store customer selections
const customerSelections = {
    frameName: '',
    frameSize: '',
    framePrice: 0,
    orientation: '',
    collages: [],
    frameType: '',
    frameColor: '',
    frameImage: '',
    specialAdditions: '',
    uploadedPhotos: [],
    specialRequests: '',
    customerName: '',
    customerAddress: '',
    customerPhone: '',
    customerWhatsApp: '',
    customerEmail: ''
};

// Initialize all frame buttons
function initializeFrameButtons() {
    Object.keys(frameTypes).forEach(frameId => {
        const frame = document.getElementById(frameId);
        if (frame) {
            frame.addEventListener('click', function() {
                openFrameSelection(frameTypes[frameId]);
            });
        }
    });

    // Close frame selection
    document.getElementById('closeFrameSelection').addEventListener('click', function() {
        closeFrameSelection();
    });

    // Select another frame button
    document.getElementById('selectAnotherFrame').addEventListener('click', function() {
        closeFrameSelection();
    });
}

// Image Gallery Functionality
function changeImage(thumbnail, newSrc) {
    document.querySelectorAll('.thumbnail').forEach(thumb => {
        thumb.classList.remove('active');
    });
    thumbnail.classList.add('active');
    document.getElementById('mainImage').src = newSrc;
}

let currentFrameType = null;
let currentSelectedSize = '';

function openFrameSelection(frameType) {
    document.getElementById('frameSelectionPage').style.display = 'block';
    document.body.style.overflow = 'hidden';

    // Store current frame type
    currentFrameType = frameType;

    // Update frame type title and main image
    document.getElementById('frameTypeTitle').textContent = frameType.title;
    document.getElementById('mainImage').src = frameType.defaultImage;

    // Clear and rebuild thumbnails
    const thumbnailBox = document.getElementById('thumbnailBox');
    thumbnailBox.innerHTML = '';

    frameType.thumbnails.forEach((thumbSrc, index) => {
        const thumbnail = document.createElement('img');
        thumbnail.className = `thumbnail ${index === 0 ? 'active' : ''}`;
        thumbnail.src = thumbSrc;
        thumbnail.onclick = () => changeImage(thumbnail, thumbSrc);
        thumbnailBox.appendChild(thumbnail);
    });

    // Reset other sections
    document.getElementById('longFrameContainer').style.display = 'none';
    document.getElementById('shortFrameContainer').style.display = 'none';
    document.getElementById('portraitCollageContainer').style.display = 'none';
    document.getElementById('landscapeCollageContainer').style.display = 'none';
    document.getElementById('groupBLandscapeCollageContainer').style.display = 'none';
    document.getElementById('collage10x12Container').style.display = 'none';
    document.getElementById('traditionalProductGalleryA').style.display = 'none';
    document.getElementById('traditionalProductGalleryB').style.display = 'none';
    document.getElementById('mountProductGalleryA').style.display = 'none';
    document.getElementById('mountProductGalleryB').style.display = 'none';
    document.getElementById('embossed-product-gallery').style.display = 'none';
   
   // Show display frame gallery by default when Display Frame is opened
// Show display frame gallery ONLY for Display Frame type
if (frameType.title === "Display Frame") {
    document.getElementById('display-frame-gallery').style.display = 'block';
    // Initialize immediately
    setTimeout(() => initDisplayFrameGallery(), 100);
} else {
    document.getElementById('display-frame-gallery').style.display = 'none';
}

    // Reset frame selections
    document.querySelectorAll('.frame').forEach(f => {
        f.classList.remove('selected');
    });

    // Reset price
    document.getElementById('price').textContent = '0';
}

function closeFrameSelection() {
    document.getElementById('frameSelectionPage').style.display = 'none';
    document.body.style.overflow = 'auto';
}

function selectFrame(frameElement, size, frameDesign) {
    // Get price from current frame type's price list
    const price = currentFrameType.prices[size];

    document.querySelectorAll('.frame').forEach(f => {
        f.classList.remove('selected');
    });

    frameElement.querySelector('.frame').classList.add('selected');
    document.getElementById('price').textContent = price;
    currentSelectedSize = size;

    // Hide all containers
    document.getElementById('portraitCollageContainer').style.display = 'none';
    document.getElementById('landscapeCollageContainer').style.display = 'none';
    document.getElementById('longFrameContainer').style.display = 'none';
    document.getElementById('shortFrameContainer').style.display = 'none';
    document.getElementById('groupBLandscapeCollageContainer').style.display = 'none';
    document.getElementById('collage10x12Container').style.display = 'none';
    document.getElementById('traditionalProductGalleryA').style.display = 'none';
    document.getElementById('traditionalProductGalleryB').style.display = 'none';
    document.getElementById('mountProductGalleryA').style.display = 'none';
    document.getElementById('mountProductGalleryB').style.display = 'none';
    document.getElementById('plymountProductGallery').style.display = 'none';
    document.getElementById('embossed-product-gallery').style.display = 'none';
    document.getElementById('display-frame-gallery').style.display = 'none';

    // Show traditional gallery if conditions are met
    if (currentFrameType && currentFrameType.title === "Traditional Frame") {
        // Group definitions
        const groupASizes = ['20×30', '16×24', '12×18', '10×15', '8×12', '6×8'];
        const groupBSizes = ['12×15', '10×12', '8×10'];

        if (groupASizes.includes(currentSelectedSize)) {
            // Show Group A gallery
            document.getElementById('traditionalProductGalleryA').style.display = 'block';
            document.getElementById('traditionalProductGalleryB').style.display = 'none';
            initTraditionalGallery('A'); // Initialize the gallery
        } else if (groupBSizes.includes(currentSelectedSize)) {
            // Show Group B gallery
            document.getElementById('traditionalProductGalleryA').style.display = 'none';
            document.getElementById('traditionalProductGalleryB').style.display = 'block';
            initTraditionalGallery('B'); // Initialize the gallery
        }
    }

    // Show mount gallery if conditions are met
    if (currentFrameType && currentFrameType.title === "Mount Frames") {
        // Group definitions
        const groupASizes = ['20×30', '16×24', '12×18', '10×15', '8×12', '6×8'];
        const groupBSizes = ['12×15', '10×12', '8×10'];

        if (groupASizes.includes(currentSelectedSize)) {
            // Show Mount Frame Group A gallery
            document.getElementById('mountProductGalleryA').style.display = 'block';
            document.getElementById('mountProductGalleryB').style.display = 'none';
            // Initialize the gallery
            setTimeout(() => initMountGallery('A'), 100);
        } else if (groupBSizes.includes(currentSelectedSize)) {
            // Show Mount Frame Group B gallery
            document.getElementById('mountProductGalleryA').style.display = 'none';
            document.getElementById('mountProductGalleryB').style.display = 'block';
            // Initialize the gallery
            setTimeout(() => initMountGallery('B'), 100);
        }
    }

    // Show Plymount gallery if conditions are met
    if (currentFrameType && currentFrameType.title === "Plymount Frame") {
        document.getElementById('plymountProductGallery').style.display = 'block';
        // Initialize the gallery
        setTimeout(() => initPlymountGallery(), 100);
    }

    // Show embossed product gallery only for embossed frames
    if (currentFrameType && currentFrameType.title === "Embossed Frame") {
        document.getElementById('embossed-product-gallery').style.display = 'block';
        // Initialize the embossed gallery
        setTimeout(() => initEmbossedProductGallery(), 100);
    }

    // Show display frame gallery only for Display Frame - DETACHED FROM SIZE SELECTION
if (currentFrameType && currentFrameType.title === "Display Frame") {
    document.getElementById('display-frame-gallery').style.display = 'block';
    // Initialize the display gallery immediately, not dependent on size selection
    setTimeout(() => initDisplayFrameGallery(), 100);
}

    // Show correct design based on group
    const isGroupB = ['12×15', '10×12', '8×10'].includes(size);
    if (isGroupB) {
        document.getElementById('shortFrameContainer').style.display = 'block';
    } else {
        document.getElementById('longFrameContainer').style.display = 'block';
    }

    // UPDATE ORDER SUMMARY WITH SELECTED FRAME
    if (currentFrameType && currentSelectedSize) {
        const price = currentFrameType.prices[currentSelectedSize];
        const frameData = {
            name: currentFrameType.title,
            size: currentSelectedSize,
            price: price,
            imageUrl: document.getElementById('mainImage').src,
            galleryImage: document.getElementById('mainImage').src,
            type: frameDesign,
            color: ''
        };
        updateFrameSelection(frameData);
    }

    // PREVENT ANY SCROLLING
    return false;
}

function selectOrientation(frameElement, orientation) {
    document.querySelectorAll('.long-frame').forEach(f => {
        f.classList.remove('selected');
    });
    document.querySelectorAll('.short-frame').forEach(f => {
        f.classList.remove('selected');
    });
    frameElement.classList.add('selected');

    const isGroupB = ['12×15', '10×12', '8×10'].includes(currentSelectedSize);

    // First, clear ALL collage selections
    document.querySelectorAll('.select-circle').forEach(circle => {
        circle.classList.remove('selected');
    });

    if (orientation === 'portrait') {
        if (isGroupB) {
            document.getElementById('collage10x12Container').style.display = 'block';
            document.getElementById('portraitCollageContainer').style.display = 'none';
            document.getElementById('landscapeCollageContainer').style.display = 'none';
            document.getElementById('groupBLandscapeCollageContainer').style.display = 'none';
        } else {
            document.getElementById('portraitCollageContainer').style.display = 'block';
            document.getElementById('landscapeCollageContainer').style.display = 'none';
            document.getElementById('collage10x12Container').style.display = 'none';
            document.getElementById('groupBLandscapeCollageContainer').style.display = 'none';
        }
    } else {
        if (isGroupB) {
            document.getElementById('groupBLandscapeCollageContainer').style.display = 'block';
            document.getElementById('portraitCollageContainer').style.display = 'none';
            document.getElementById('collage10x12Container').style.display = 'none';
            document.getElementById('landscapeCollageContainer').style.display = 'none';
        } else {
            document.getElementById('landscapeCollageContainer').style.display = 'block';
            document.getElementById('portraitCollageContainer').style.display = 'none';
            document.getElementById('collage10x12Container').style.display = 'none';
            document.getElementById('groupBLandscapeCollageContainer').style.display = 'none';
        }
    }
    
    // CLEAR PREVIOUS COLLAGE SELECTIONS WHEN ORIENTATION CHANGES
    customerSelections.collages = [];
    updateSummaryDisplay();
    
    // UPDATE ORDER SUMMARY WITH SELECTED ORIENTATION
    updateOrientationSelection(orientation);
    
    return false;
}
function toggleSelection(circle) {
    circle.classList.toggle('selected');
    
    // Get the current visible collage container
    const visibleContainers = [
        'portraitCollageContainer', 
        'landscapeCollageContainer', 
        'groupBLandscapeCollageContainer',
        'collage10x12Container'
    ];
    
    let activeContainer = null;
    for (const containerId of visibleContainers) {
        const container = document.getElementById(containerId);
        if (container && container.style.display !== 'none') {
            activeContainer = container;
            break;
        }
    }
    
    const collages = [];
    
    if (activeContainer) {
        // Get all selected collages from the active container
        activeContainer.querySelectorAll('.select-circle.selected').forEach(selectedCircle => {
            const collageItem = selectedCircle.closest('.collage-item, .portrait-collage-item, .landscape-collage-item, .group-b-landscape-item');
            if (collageItem) {
                const img = collageItem.querySelector('img');
                if (img) {
                    collages.push({
                        name: img.alt || 'Collage',
                        imageUrl: img.src
                    });
                }
            }
        });
    }
    
    // Update the order summary with selected collages
    updateCollageSelection(collages);
}

// Scroll detection function to show frame sections
function checkScrollPosition() {
    const collageSection = document.querySelector('.last-section');
    const frameSections = document.querySelectorAll('.design-group');
    const scrollIndicator = document.getElementById('scrollIndicator');

    if (!collageSection || frameSections.length === 0) return;

    const collageBottom = collageSection.getBoundingClientRect().bottom;
    const windowHeight = window.innerHeight;

    // If collage section has been scrolled past
    if (collageBottom < windowHeight) {
        frameSections.forEach(section => {
            section.classList.add('visible');
        });

        // Hide scroll indicator
        scrollIndicator.classList.remove('visible');

        // Remove the scroll listener once we've shown the frames
        window.removeEventListener('scroll', checkScrollPosition);
    } else {
        // Show scroll indicator if not yet scrolled past collage
        scrollIndicator.classList.add('visible');
    }
}

// Slideshow functionality
function initSlideshow() {
    const slides = document.querySelectorAll('.slide');
    let currentSlide = 0;

    // Show first slide immediately
    if(slides.length > 0) {
        slides[currentSlide].classList.add('active');

        // Rotate slides every 2.5 seconds
        setInterval(() => {
            slides[currentSlide].classList.remove('active');
            currentSlide = (currentSlide + 1) % slides.length;
            slides[currentSlide].classList.add('active');
        }, 2500);
    }
}

// EMBOSSED PRODUCT GALLERY FUNCTIONALITY
function initEmbossedProductGallery() {
    const productGallerySection = document.getElementById('embossed-product-gallery');
    const mainImage = productGallerySection.querySelector('#main-image');
    const placeholder = productGallerySection.querySelector('.placeholder');
    const loadingIndicator = productGallerySection.querySelector('.loading');
    const selectFrameBtn = productGallerySection.querySelector('.select-frame-btn');
    const confirmationMessage = productGallerySection.querySelector('.confirmation-message');
    const confirmYesBtn = productGallerySection.querySelector('.confirm-yes');
    const confirmNoBtn = productGallerySection.querySelector('.confirm-no');

    let selectedImageUrl = '';

    // Color mapping for embossed frames
    const colorMap = {
        'https://i.postimg.cc/sD2xvwGV/white.png': 'White',
        'https://i.postimg.cc/Df6mvtZj/black.png': 'Black',
        'https://i.postimg.cc/PxkNJHYc/blue.png': 'Blue',
        'https://i.postimg.cc/rFYmWx55/pink.png': 'Pink',
        'https://i.postimg.cc/Bbmvm1k9/red.png': 'Red'
    };

    // Preload all images for instant display
    function preloadImages() {
        const imageUrls = [];

        // Collect all image URLs
        productGallerySection.querySelectorAll('.thumbnail').forEach(thumbnail => {
            imageUrls.push(thumbnail.getAttribute('data-image'));
        });

        // Preload each image
        imageUrls.forEach(url => {
            const img = new Image();
            img.src = url;
        });
    }

    // Thumbnail click functionality
    function setupThumbnailListeners() {
        const thumbnails = productGallerySection.querySelectorAll('.thumbnail');
        const indicators = productGallerySection.querySelectorAll('.selection-indicator');

        thumbnails.forEach((thumbnail, index) => {
            // Click on thumbnail
            thumbnail.addEventListener('click', function() {
                selectThumbnail(this, index);
            });

            // Click on indicator
            indicators[index].addEventListener('click', function(e) {
                e.stopPropagation(); // Prevent triggering the thumbnail click event
                selectThumbnail(thumbnail, index);
            });
        });
    }

    function selectThumbnail(thumbnail, index) {
        const imageUrl = thumbnail.getAttribute('data-image');
        selectedImageUrl = imageUrl;

        // Show loading indicator
        loadingIndicator.style.display = 'block';
        mainImage.classList.remove('loaded');
        placeholder.style.display = 'none';

        // Show the Select Frame button
        selectFrameBtn.classList.add('visible');

        // Check if image is already loaded in cache
        const testImage = new Image();
        testImage.src = imageUrl;

        if (testImage.complete) {
            displayImage(imageUrl);
        } else {
            testImage.onload = function() {
                displayImage(imageUrl);
            };
        }

        // Highlight selected thumbnail
        productGallerySection.querySelectorAll('.thumbnail').forEach(t => {
            t.style.boxShadow = 'none';
        });
        thumbnail.style.boxShadow = '0 0 12px rgba(52, 152, 219, 0.6)';

        // Highlight selected indicator
        productGallerySection.querySelectorAll('.selection-indicator').forEach(indicator => {
            indicator.classList.remove('active');
        });
        productGallerySection.querySelectorAll('.selection-indicator')[index].classList.add('active');
        
        // UPDATE FRAME COLOR IN ORDER SUMMARY
        const color = colorMap[imageUrl] || 'Custom';
        updateGallerySelection(color);
    }

    function displayImage(url) {
        mainImage.src = url;
        mainImage.onload = function() {
            loadingIndicator.style.display = 'none';
            mainImage.classList.add('loaded');
        };
    }

    // Select Frame button functionality - CORRECTED VERSION
    selectFrameBtn.addEventListener('click', function() {
        if (selectedImageUrl && currentSelectedSize && currentFrameType) {
            const colorMap = {
                'https://i.postimg.cc/sD2xvwGV/white.png': 'White',
                'https://i.postimg.cc/Df6mvtZj/black.png': 'Black',
                'https://i.postimg.cc/PxkNJHYc/blue.png': 'Blue',
                'https://i.postimg.cc/rFYmWx55/pink.png': 'Pink',
                'https://i.postimg.cc/Bbmvm1k9/red.png': 'Red'
            };
            
            const frameData = {
                name: currentFrameType.title,
                size: currentSelectedSize,
                price: currentFrameType.prices[currentSelectedSize],
                imageUrl: document.getElementById('mainImage').src,
                galleryImage: selectedImageUrl,
                type: '', // Embossed frames don't have fat/thin types
                color: colorMap[selectedImageUrl] || 'Custom'
            };
            
            confirmationMessage.classList.add('visible');
            
            // Update confirmation buttons
            confirmYesBtn.replaceWith(confirmYesBtn.cloneNode(true));
            confirmNoBtn.replaceWith(confirmNoBtn.cloneNode(true));
            
            const newYesBtn = confirmationMessage.querySelector('.confirm-yes');
            const newNoBtn = confirmationMessage.querySelector('.confirm-no');
            
            newYesBtn.addEventListener('click', function() {
                updateFrameSelection(frameData);
                confirmationMessage.classList.remove('visible');
                closeFrameSelection();
                showOrderSummary();
            });
            
            newNoBtn.addEventListener('click', function() {
                confirmationMessage.classList.remove('visible');
            });
        }
    });

    // Initial setup - automatically select the first thumbnail
    const firstThumbnail = productGallerySection.querySelector('.thumbnail');
    if (firstThumbnail) {
        const index = Array.from(productGallerySection.querySelectorAll('.thumbnail')).indexOf(firstThumbnail);
        selectThumbnail(firstThumbnail, index);
    }

    // Set up initial listeners
    preloadImages();
    setupThumbnailListeners();
}

// Traditional Frame Product Gallery Functionality
function initTraditionalGallery(group) {
    const galleryId = `traditionalProductGallery${group}`;
    const gallerySection = document.getElementById(galleryId);

    // Only initialize if the gallery is visible
    if (!gallerySection || gallerySection.style.display !== 'block') return;

    const mainImage = gallerySection.querySelector(`#main-image-${group.toLowerCase()}`);
    const placeholder = gallerySection.querySelector('.placeholder');
    const loadingIndicator = gallerySection.querySelector('.loading');
    const selectFrameBtn = gallerySection.querySelector('.select-frame-btn');
    const filterButtons = gallerySection.querySelectorAll('.filter-btn');
    const thumbnailSets = gallerySection.querySelectorAll('.thumbnail-set');

    let selectedImageUrl = '';

    // Filter button functionality
    filterButtons.forEach(button => {
        button.addEventListener('click', function() {
            const filter = this.getAttribute('data-filter');

            // Update active button
            filterButtons.forEach(btn => btn.classList.remove('active'));
            this.classList.add('active');

            // Show corresponding thumbnail set
            thumbnailSets.forEach(set => set.classList.remove('active'));
            document.getElementById(`${filter}-frames-${group.toLowerCase()}`).classList.add('active');
        });
    });

    // Thumbnail selection
    gallerySection.querySelectorAll('.thumbnail').forEach(thumbnail => {
        thumbnail.addEventListener('click', function() {
            const imageUrl = this.getAttribute('data-image');
            selectedImageUrl = imageUrl;

            // Show loading
            if (loadingIndicator) loadingIndicator.style.display = 'block';
            if (mainImage) mainImage.classList.remove('loaded');
            if (placeholder) placeholder.style.display = 'none';

            // Load image
            const testImage = new Image();
            testImage.src = imageUrl;

            if (testImage.complete) {
                displayImage(imageUrl);
            } else {
                testImage.onload = function() {
                    displayImage(imageUrl);
                };
            }

            // Show select button
            if (selectFrameBtn) selectFrameBtn.classList.add('visible');

            // Highlight selected thumbnail
            gallerySection.querySelectorAll('.thumbnail').forEach(t => {
                t.style.boxShadow = 'none';
            });
            this.style.boxShadow = '0 0 12px rgba(52, 152, 219, 0.6)';

            // Highlight selected indicator
            const indicators = this.querySelectorAll('.selection-indicator');
            if (indicators.length > 0) {
                gallerySection.querySelectorAll('.selection-indicator').forEach(indicator => {
                    indicator.classList.remove('active');
                });
                indicators[0].classList.add('active');
            }
        });
    });

    function displayImage(url) {
        if (mainImage) {
            mainImage.src = url;
            mainImage.onload = function() {
                if (loadingIndicator) loadingIndicator.style.display = 'none';
                mainImage.classList.add('loaded');
            };
        }
    }

    // Select frame button
    if (selectFrameBtn) {
        selectFrameBtn.addEventListener('click', function() {
            if (selectedImageUrl && currentSelectedSize && currentFrameType) {
                const frameData = {
                    name: currentFrameType.title,
                    size: currentSelectedSize,
                    price: currentFrameType.prices[currentSelectedSize],
                    imageUrl: document.getElementById('mainImage').src,
                    galleryImage: selectedImageUrl,
                    type: gallerySection.querySelector('.filter-btn.active')?.getAttribute('data-filter') || '',
                    color: ''
                };
                
                const confirmationMessage = document.getElementById('confirmation-message');
                if (confirmationMessage) {
                    confirmationMessage.classList.add('visible');
                    
                    // Remove existing listeners and add new ones
                    const confirmYesBtn = confirmationMessage.querySelector('.confirm-yes');
                    const confirmNoBtn = confirmationMessage.querySelector('.confirm-no');
                    
                    confirmYesBtn.replaceWith(confirmYesBtn.cloneNode(true));
                    confirmNoBtn.replaceWith(confirmNoBtn.cloneNode(true));
                    
                    const newYesBtn = confirmationMessage.querySelector('.confirm-yes');
                    const newNoBtn = confirmationMessage.querySelector('.confirm-no');
                    
                    newYesBtn.addEventListener('click', function() {
                        updateFrameSelection(frameData);
                        confirmationMessage.classList.remove('visible');
                        closeFrameSelection();
                        showOrderSummary();
                    });
                    
                    newNoBtn.addEventListener('click', function() {
                        confirmationMessage.classList.remove('visible');
                    });
                }
            }
        });
    }

    // Auto-select first thumbnail
    const firstThumbnail = gallerySection.querySelector('.thumbnail');
    if (firstThumbnail) {
        firstThumbnail.click();
    }
}

// PLYMOUNT FRAME GALLERY FUNCTION
function initPlymountGallery() {
    const gallerySection = document.getElementById('plymountProductGallery');
    const mainImage = gallerySection.querySelector('#main-image-plymount');
    const placeholder = gallerySection.querySelector('.placeholder');
    const loadingIndicator = gallerySection.querySelector('.loading');
    const selectFrameBtn = gallerySection.querySelector('.select-frame-btn');

    let selectedImageUrl = '';

    // Thumbnail selection
    gallerySection.querySelectorAll('.thumbnail').forEach(thumbnail => {
        thumbnail.addEventListener('click', function() {
            const imageUrl = this.getAttribute('data-image');
            selectedImageUrl = imageUrl;

            // Show loading
            if (loadingIndicator) loadingIndicator.style.display = 'block';
            if (mainImage) mainImage.classList.remove('loaded');
            if (placeholder) placeholder.style.display = 'none';

            // Load image
            const testImage = new Image();
            testImage.src = imageUrl;

            if (testImage.complete) {
                displayImage(imageUrl);
            } else {
                testImage.onload = function() {
                    displayImage(imageUrl);
                };
            }

            // Show select button
            if (selectFrameBtn) selectFrameBtn.classList.add('visible');

            // Highlight selected thumbnail
            gallerySection.querySelectorAll('.thumbnail').forEach(t => {
                t.style.boxShadow = 'none';
            });
            this.style.boxShadow = '0 0 12px rgba(52, 152, 219, 0.6)';

            // Highlight selected indicator
            const indicators = this.querySelectorAll('.selection-indicator');
            if (indicators.length > 0) {
                gallerySection.querySelectorAll('.selection-indicator').forEach(indicator => {
                    indicator.classList.remove('active');
                });
                indicators[0].classList.add('active');
            }
        });
    });

    function displayImage(url) {
        if (mainImage) {
            mainImage.src = url;
            mainImage.onload = function() {
                if (loadingIndicator) loadingIndicator.style.display = 'none';
                mainImage.classList.add('loaded');
            };
        }
    }

    // Add confirmation button functionality for Plymount frames
    if (selectFrameBtn) {
        selectFrameBtn.addEventListener('click', function() {
            if (selectedImageUrl && currentSelectedSize && currentFrameType) {
                const frameData = {
                    name: currentFrameType.title,
                    size: currentSelectedSize,
                    price: currentFrameType.prices[currentSelectedSize],
                    imageUrl: document.getElementById('mainImage').src,
                    galleryImage: selectedImageUrl,
                    type: '', // Plymount doesn't have fat/thin types
                    color: '' // Plymount doesn't have color options
                };
                
                const confirmationMessage = document.getElementById('confirmation-message');
                if (confirmationMessage) {
                    confirmationMessage.classList.add('visible');
                    
                    // Remove existing listeners and add new ones
                    const confirmYesBtn = confirmationMessage.querySelector('.confirm-yes');
                    const confirmNoBtn = confirmationMessage.querySelector('.confirm-no');
                    
                    confirmYesBtn.replaceWith(confirmYesBtn.cloneNode(true));
                    confirmNoBtn.replaceWith(confirmNoBtn.cloneNode(true));
                    
                    const newYesBtn = confirmationMessage.querySelector('.confirm-yes');
                    const newNoBtn = confirmationMessage.querySelector('.confirm-no');
                    
                    newYesBtn.addEventListener('click', function() {
                        updateFrameSelection(frameData);
                        confirmationMessage.classList.remove('visible');
                        closeFrameSelection();
                        showOrderSummary();
                    });
                    
                    newNoBtn.addEventListener('click', function() {
                        confirmationMessage.classList.remove('visible');
                    });
                }
            }
        });
    }

    // Auto-select first thumbnail
    const firstThumbnail = gallerySection.querySelector('.thumbnail');
    if (firstThumbnail) {
        firstThumbnail.click();
    }
}

// MOUNT FRAMES GALLERY FUNCTIONS
function initMountGallery(group) {
    const galleryId = `mountProductGallery${group}`;
    const gallerySection = document.getElementById(galleryId);

    // Only initialize if the gallery is visible
    if (!gallerySection || gallerySection.style.display !== 'block') return;

    const mainImage = gallerySection.querySelector(`#main-image-mount-${group.toLowerCase()}`);
    const placeholder = gallerySection.querySelector('.placeholder');
