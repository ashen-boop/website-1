Order generated from Artistic Unity Website
    `.trim();

    // Direct Gmail compose with your email
    const gmailUrl = `https://mail.google.com/mail/?view=cm&fs=1&to=ashengamage238@gmail.com&su=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
    
    const gmailWindow = window.open(gmailUrl, '_blank', 'width=800,height=600');
    
    if (!gmailWindow) {
        // Fallback to mailto if popup blocked
        const mailtoUrl = `mailto:ashengamage238@gmail.com?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
        window.location.href = mailtoUrl;
