                gallerySection.querySelectorAll('.selection-indicator').forEach(indicator => {
                    indicator.classList.remove('active');
                });
                indicators[0].classList.add('active');
            }
        });
    });

    function displayImage(url) {
        if (mainImage) {
            mainImage.src = url;
            mainImage.onload = function() {
                if (loadingIndicator) loadingIndicator.style.display = 'none';
                mainImage.classList.add('loaded');
            };
        }
    }

    // Select frame button
    if (selectFrameBtn) {
        selectFrameBtn.addEventListener('click', function() {
            if (selectedImageUrl && currentSelectedSize && currentFrameType) {
                const frameData = {
                    name: currentFrameType.title,
                    size: currentSelectedSize,
                    price: currentFrameType.prices[currentSelectedSize],
                    imageUrl: document.getElementById('mainImage').src,
                    galleryImage: selectedImageUrl,
                    type: gallerySection.querySelector('.filter-btn.active')?.getAttribute('data-filter') || '',
                    color: '' // Mount frames don't have color options
                };
                
                const confirmationMessage = document.getElementById('confirmation-message-mount');
                if (confirmationMessage) {
                    confirmationMessage.classList.add('visible');
                    
                    // Remove existing listeners and add new ones
                    const confirmYesBtn = confirmationMessage.querySelector('.confirm-yes');
                    const confirmNoBtn = confirmationMessage.querySelector('.confirm-no');
                    
                    confirmYesBtn.replaceWith(confirmYesBtn.cloneNode(true));
                    confirmNoBtn.replaceWith(confirmNoBtn.cloneNode(true));
                    
                    const newYesBtn = confirmationMessage.querySelector('.confirm-yes');
                    const newNoBtn = confirmationMessage.querySelector('.confirm-no');
                    
                    newYesBtn.addEventListener('click', function() {
                        updateFrameSelection(frameData);
                        confirmationMessage.classList.remove('visible');
                        closeFrameSelection();
                        showOrderSummary();
                    });
                    
                    newNoBtn.addEventListener('click', function() {
                        confirmationMessage.classList.remove('visible');
                    });
                }
            }
        });
    }

    // Auto-select first thumbnail
    const firstThumbnail = gallerySection.querySelector('.thumbnail');
    if (firstThumbnail) {
        firstThumbnail.click();
    }
}

// Display Frame Gallery Functionality
function initDisplayFrameGallery() {
    const gallerySection = document.getElementById('display-frame-gallery');
    const mainImage = gallerySection.querySelector('#main-image-display');
    const placeholder = gallerySection.querySelector('.placeholder');
    const loadingIndicator = gallerySection.querySelector('.loading');
    const selectFrameBtn = gallerySection.querySelector('.select-frame-btn');
    const confirmationMessage = document.getElementById('confirmation-message');
    const confirmYesBtn = confirmationMessage.querySelector('.confirm-yes');
    const confirmNoBtn = confirmationMessage.querySelector('.confirm-no');

    let selectedImageUrl = '';

    // Preload all images for instant display
    function preloadImages() {
        const imageUrls = [];
        gallerySection.querySelectorAll('.thumbnail').forEach(thumbnail => {
            imageUrls.push(thumbnail.getAttribute('data-image'));
        });

        imageUrls.forEach(url => {
            const img = new Image();
            img.src = url;
        });
    }

    // Thumbnail click functionality
    function setupThumbnailListeners() {
        const thumbnails = gallerySection.querySelectorAll('.thumbnail');
        const indicators = gallerySection.querySelectorAll('.selection-indicator');

        thumbnails.forEach((thumbnail, index) => {
            // Click on thumbnail
            thumbnail.addEventListener('click', function() {
                selectThumbnail(this, index);
            });

            // Click on indicator
            indicators[index].addEventListener('click', function(e) {
                e.stopPropagation();
                selectThumbnail(thumbnail, index);
            });
        });
    }

    function selectThumbnail(thumbnail, index) {
        const imageUrl = thumbnail.getAttribute('data-image');
        selectedImageUrl = imageUrl;

        // Show loading indicator
        loadingIndicator.style.display = 'block';
        mainImage.classList.remove('loaded');
        placeholder.style.display = 'none';

        // Show the Select Frame button
        selectFrameBtn.classList.add('visible');

        // Check if image is already loaded in cache
        const testImage = new Image();
        testImage.src = imageUrl;

        if (testImage.complete) {
            displayImage(imageUrl);
        } else {
            testImage.onload = function() {
                displayImage(imageUrl);
            };
        }

        // Highlight selected thumbnail
        gallerySection.querySelectorAll('.thumbnail').forEach(t => {
            t.style.boxShadow = 'none';
        });
        thumbnail.style.boxShadow = '0 0 12px rgba(52, 152, 219, 0.6)';

        // Highlight selected indicator
        gallerySection.querySelectorAll('.selection-indicator').forEach(indicator => {
            indicator.classList.remove('active');
        });
        gallerySection.querySelectorAll('.selection-indicator')[index].classList.add('active');
    }

    function displayImage(url) {
        mainImage.src = url;
        mainImage.onload = function() {
            loadingIndicator.style.display = 'none';
            mainImage.classList.add('loaded');
        };
    }

    // Select Frame button functionality
    selectFrameBtn.addEventListener('click', function() {
        if (selectedImageUrl && currentSelectedSize && currentFrameType) {
            const frameData = {
                name: currentFrameType.title,
                size: currentSelectedSize,
                price: currentFrameType.prices[currentSelectedSize],
                imageUrl: document.getElementById('mainImage').src,
                galleryImage: selectedImageUrl,
                type: 'display', // Specific type for display frames
                color: '' // Display frames might not have color options
            };
            
            confirmationMessage.classList.add('visible');
            
            // Update confirmation buttons
confirmYesBtn.replaceWith(confirmYesBtn.cloneNode(true));
confirmNoBtn.replaceWith(confirmNoBtn.cloneNode(true));

const newYesBtn = confirmationMessage.querySelector('.confirm-yes');
const newNoBtn = confirmationMessage.querySelector('.confirm-no');

newYesBtn.addEventListener('click', function() {
    updateFrameSelection(frameData);
    confirmationMessage.classList.remove('visible');
    // REMOVED: showOrderSummary(); - Customer continues exploring website
});

newNoBtn.addEventListener('click', function() {
    confirmationMessage.classList.remove('visible');
});
}
});

    // Initial setup - automatically select the first thumbnail
    const firstThumbnail = gallerySection.querySelector('.thumbnail');
    if (firstThumbnail) {
        const index = Array.from(gallerySection.querySelectorAll('.thumbnail')).indexOf(firstThumbnail);
        selectThumbnail(firstThumbnail, index);
    }

    // Set up initial listeners
    preloadImages();
    setupThumbnailListeners();
}

// ===== ORDER SUMMARY FUNCTIONS =====

function updateFrameSelection(frameData) {
    // If no valid frame data, clear the order summary
    if (!frameData || !frameData.galleryImage) {
        customerSelections.frameName = '';
        customerSelections.frameSize = '';
        customerSelections.framePrice = 0;
        customerSelections.frameImage = '';
        customerSelections.frameType = '';
        customerSelections.frameColor = '';
        updateSummaryDisplay();
        saveFormData();
        return; // Exit early
    }
    
    // Continue with existing code for valid frame selection
    customerSelections.frameName = frameData.name || '';
    customerSelections.frameSize = frameData.size || '';
    customerSelections.framePrice = frameData.price || 0;
    customerSelections.frameImage = frameData.galleryImage || ''; // REMOVED: frameData.imageUrl
    customerSelections.frameType = frameData.type || '';
    customerSelections.frameColor = frameData.color || '';
    
    updateSummaryDisplay();
    saveFormData();
}

// Function to update orientation selection
function updateOrientationSelection(orientation) {
    customerSelections.orientation = orientation;
    updateSummaryDisplay();
    saveFormData();
}

function updateCollageSelection(collages) {
    customerSelections.collages = collages;
    updateSummaryDisplay();
    saveFormData();
    
    // Debug log to verify collages are being captured
    console.log('Collages updated:', collages);
}

// Function to update gallery selection (color)
function updateGallerySelection(color) {
    customerSelections.frameColor = color;
    updateSummaryDisplay();
    saveFormData();
}

// Show order summary
function showOrderSummary() {
    updateSummaryDisplay();
    orderSummaryContainer.style.display = 'block';
    document.body.style.overflow = 'hidden';
}

// Hide order summary
function hideOrderSummary() {
    orderSummaryContainer.style.display = 'none';
    document.body.style.overflow = 'auto';
    saveFormData();
}

// Update summary display with current selections
function updateSummaryDisplay() {
    if (document.getElementById('summary-frame-name')) {
        document.getElementById('summary-frame-name').textContent = 
            customerSelections.frameName || 'Not selected';
            
        document.getElementById('summary-size-price').textContent = 
            customerSelections.frameSize ? 
            `${customerSelections.frameSize} - $${customerSelections.framePrice}` : 
            'Not selected';
            
        document.getElementById('summary-orientation').textContent = 
            customerSelections.orientation || 'Not selected';
            
        // Frame Type - only show if available
        const frameTypeElement = document.getElementById('summary-frame-type');
        if (frameTypeElement) {
            frameTypeElement.textContent = customerSelections.frameType || 'Not applicable';
            frameTypeElement.parentElement.style.display = customerSelections.frameType ? 'flex' : 'none';
        }

        // Frame Color - only show if available  
        const frameColorElement = document.getElementById('summary-frame-color');
        if (frameColorElement) {
            frameColorElement.textContent = customerSelections.frameColor || 'Not applicable';
            frameColorElement.parentElement.style.display = customerSelections.frameColor ? 'flex' : 'none';
        }
            
        document.getElementById('summary-special-additions').textContent = 
            customerSelections.specialAdditions || 'None';
            
        if (document.getElementById('special-requests')) {
            document.getElementById('special-requests').value = 
                customerSelections.specialRequests || '';
        }
            
document.getElementById('summary-special-additions').textContent = 
    customerSelections.specialAdditions || 'None';
            
if (document.getElementById('special-requests')) {
    document.getElementById('special-requests').value = 
        customerSelections.specialRequests || '';
}
            
// Update collages
const collagePreview = document.getElementById('collage-preview');
if (collagePreview) {
    collagePreview.innerHTML = '';
    
    if (customerSelections.collages && customerSelections.collages.length > 0) {
        customerSelections.collages.forEach((collage, index) => {
            const img = document.createElement('img');
            img.src = collage.imageUrl;
            img.alt = collage.name || `Collage ${index + 1}`;
            img.title = collage.name || `Collage ${index + 1}`;
            img.style.maxWidth = '80px';
            img.style.maxHeight = '80px';
            img.style.margin = '2px';
            collagePreview.appendChild(img);
        });
    } else {
        collagePreview.innerHTML = '<span style="color:#6c757d; font-style:italic;">No collages selected</span>';
    }
}      
        // Update frame preview
        updateFramePreview();
        
        // Update customer details form
        if (document.getElementById('customer-name')) {
            document.getElementById('customer-name').value = customerSelections.customerName;
        }
        if (document.getElementById('customer-address')) {
            document.getElementById('customer-address').value = customerSelections.customerAddress;
        }
        if (document.getElementById('customer-phone')) {
            document.getElementById('customer-phone').value = customerSelections.customerPhone;
        }
        if (document.getElementById('customer-whatsapp')) {
            document.getElementById('customer-whatsapp').value = customerSelections.customerWhatsApp;
        }
        if (document.getElementById('customer-email')) {
            document.getElementById('customer-email').value = customerSelections.customerEmail;
        }
    }
}

// Update frame preview
function updateFramePreview() {
    if (framePreview) {
        framePreview.innerHTML = '';
        
        if (customerSelections.frameImage) {
            const img = document.createElement('img');
            img.src = customerSelections.frameImage;
            img.alt = `${customerSelections.frameName} - ${customerSelections.frameColor}`;
            framePreview.appendChild(img);
            
            // Update preview details
            let details = `${customerSelections.frameName}`;
            if (customerSelections.frameType) {
                details += `, ${customerSelections.frameType}`;
            }
            if (customerSelections.frameColor) {
                details += `, ${customerSelections.frameColor}`;
            }
            if (customerSelections.frameSize) {
                details += `, ${customerSelections.frameSize}`;
            }
            
            if (framePreviewDetails) {
                framePreviewDetails.textContent = details;
            }
        } else {
            framePreview.innerHTML = '<span>No frame selected</span>';
            if (framePreviewDetails) {
                framePreviewDetails.textContent = 'Select a frame to see preview';
            }
        }
    }
}

// Handle photo upload
function handlePhotoUpload(event) {
    const files = event.target.files;
    customerSelections.uploadedPhotos = [];
    if (uploadPreview) {
        uploadPreview.innerHTML = '';
    }
    
    for (let i = 0; i < files.length; i++) {
        const file = files[i];
        if (file.type.match('image.*')) {
            const reader = new FileReader();
            
            reader.onload = (function(theFile) {
                return function(e) {
                    customerSelections.uploadedPhotos.push({
                        name: theFile.name,
                        dataUrl: e.target.result
                    });
                    
                    if (uploadPreview) {
                        const div = document.createElement('div');
                        div.innerHTML = `<img src="${e.target.result}" title="${theFile.name}">`;
                        uploadPreview.appendChild(div.firstChild);
                    }
                };
            })(file);
            
            reader.readAsDataURL(file);
        }
    }
}

// Save form data
function saveFormData() {
    if (document.getElementById('special-requests')) {
        customerSelections.specialRequests = document.getElementById('special-requests').value;
    }
    if (document.getElementById('customer-name')) {
        customerSelections.customerName = document.getElementById('customer-name').value;
    }
    if (document.getElementById('customer-address')) {
        customerSelections.customerAddress = document.getElementById('customer-address').value;
    }
    if (document.getElementById('customer-phone')) {
        customerSelections.customerPhone = document.getElementById('customer-phone').value;
    }
    if (document.getElementById('customer-whatsapp')) {
        customerSelections.customerWhatsApp = document.getElementById('customer-whatsapp').value;
    }
    if (document.getElementById('customer-email')) {
        customerSelections.customerEmail = document.getElementById('customer-email').value;
    }
    
    try {
        localStorage.setItem('customerSelections', JSON.stringify(customerSelections));
    } catch (e) {
        console.error('Error saving to localStorage:', e);
    }
}

function submitOrder() {
    saveFormData(); // ← THIS LINE MUST BE HERE to save all form data
    
    if (!validateForm()) {
        alert('Please fill in all required fields: Name, Address, Contact Number, and Email');
        return;
    }
    
    // Show the WhatsApp/Gmail section
    document.getElementById('sharingSection').style.display = 'block';
    
    // Optional: Scroll to the sharing section
    document.getElementById('sharingSection').scrollIntoView({ behavior: 'smooth' });
}

// Validate form
function validateForm() {
    return customerSelections.customerName &&
           customerSelections.customerAddress &&
           customerSelections.customerPhone &&
           customerSelections.customerEmail;
}

// Load saved data if available
function loadSavedData() {
    try {
        const saved = localStorage.getItem('customerSelections');
        if (saved) {
            const parsed = JSON.parse(saved);
            Object.assign(customerSelections, parsed);
        }
    } catch (e) {
        console.error('Error loading from localStorage:', e);
    }
}

// Initialize order summary functionality
function initOrderSummary() {
    const viewSummaryBtn = document.getElementById('viewSummaryBtn');
    const orderSummaryContainer = document.getElementById('orderSummaryContainer');
    const closeSummary = document.getElementById('closeSummary');
    const submitOrderBtn = document.getElementById('submitOrderBtn');
    const photoUpload = document.getElementById('photo-upload');
    
    if (viewSummaryBtn) {
        viewSummaryBtn.addEventListener('click', showOrderSummary);
    }
    if (closeSummary) {
        closeSummary.addEventListener('click', hideOrderSummary);
    }
    if (submitOrderBtn) {
        submitOrderBtn.addEventListener('click', submitOrder);
    }
    if (photoUpload) {
        photoUpload.addEventListener('change', handlePhotoUpload);
    }
}

// DOM Elements
const viewSummaryBtn = document.getElementById('viewSummaryBtn');
const orderSummaryContainer = document.getElementById('orderSummaryContainer');
const closeSummary = document.getElementById('closeSummary');
const submitOrderBtn = document.getElementById('submitOrderBtn');
const photoUpload = document.getElementById('photo-upload');
const uploadPreview = document.getElementById('upload-preview');
const framePreview = document.getElementById('frame-preview');
const framePreviewDetails = document.getElementById('frame-preview-details');

document.addEventListener('DOMContentLoaded', function() {
    initializeFrameButtons();
    initSlideshow();
    loadSavedData();
    updateSummaryDisplay();
    initOrderSummary();
    
    // Initialize scroll detection for frame sections
    window.addEventListener('scroll', checkScrollPosition);
    checkScrollPosition(); // Check initial state
});

